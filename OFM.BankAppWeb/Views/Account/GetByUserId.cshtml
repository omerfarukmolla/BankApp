@model List<AccountListModel>
@{
    Layout = "~/Views/Shared/_layout.cshtml";
}

<div class="row">
    <div class="col-6">

        <h5 class="card-title">Kullanıcı Bilkgileri</h5>
        <div class="card">
            <div class="card-body">
                <p class="card-text">@ViewBag.FullName</p>
                <a asp-action="index" asp-controller="Home" class="btn btn-primary">Kullanıcı Listesine Geri Dön</a>
            </div>
        </div>
    </div>
    <div class="col-6">
        <h5>Hesap Bilgileri </h5>
        @if (Model.Count() > 0)
        {
            @foreach (var item in Model)
            {
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Hesap Numarası : @item.AccountNumber</h5>
                        <p class="card-text">Hesap Bakiyesi : @item.Balance</p>
                        <a asp-action="SendMoney" asp-controller="Account" asp-route-accountId="@item.Id" class="btn btn-primary">Gönder</a>
                    </div>
                </div>
            }
        }
        else
        {
            <div class="alert alert-info text-center">
                <p class="lead">
                    Kullanıcının Hesabı Bulunamadı.
                </p>
            </div>
        }

    </div>
</div>